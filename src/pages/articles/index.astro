---
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";
import Layout from "../../layouts/Layout.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<Layout title="Articles" description="Articles by Martin Ryberg Laude">
  <ul class="flex flex-col gap-8 px-2 py-20 md:px-6">
    {
      posts.map((post) => (
        <li>
          <a href={`/articles/${post.id}/`} class="group">
            <h4 class="title font-medium group-hover:underline dark:text-white">
              &gt; {post.data.title}
            </h4>
            <p class="mt-2 font-light dark:text-white">
              {post.data.description}
            </p>
            <p class="date mt-2">
              <FormattedDate date={post.data.pubDate} />
            </p>
          </a>
        </li>
      ))
    }
  </ul>
</Layout>
